<div class="message clearfix">
      <%= image_tag 'black-cat.png' %>
      <div class="message_box">
        <p class="user_name">
          <%= tweet.user.name%>
        </p>
        <p class="text">
          <%= tweet.text %>
        </p>
        <ul class = "more_list">
        <% if user_signed_in? && current_user.id == tweet.user_id %> 
          <li>
            <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %>
            <%= link_to '削除',"/tweets/#{tweet.id}", method: :delete %>
          </li>
        <% end %> 
        </ul>
      </div>
    </div>